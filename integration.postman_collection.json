            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customer_name\": \"Cliente Postman VIP\",\n  \"items\": [\n    {\n      \"product_id\": \"laptop-x1\",\n      \"quantity\": 2,\n      \"price\": 1200.00\n    }\n  ]\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/orders",
              "host": ["{{base_url}}"],
              "path": ["orders"]
            }
          }
        },
        {
          "name": "Crear Pedido (ERROR -> DLQ)",
          "request": {
            "auth": {
